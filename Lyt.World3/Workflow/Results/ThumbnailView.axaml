<UserControl 
	x:Class="Lyt.World3.Workflow.Results.ThumbnailView"
	xmlns:vm="clr-namespace:Lyt.World3.Workflow.Results"
	x:DataType="vm:ThumbnailViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="260"
	>
	<Border
		x:Name="outerBorder"
		Height="{Binding BorderHeight}" 
		Background="Transparent"
		BorderBrush="{StaticResource LightAqua_1_100}"
		BorderThickness="1"
		CornerRadius="4"
		>
		<Grid
			Margin="2"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="36" />
				<RowDefinition Height="200" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="0"
				Text="{Binding Title}"
				FontSize="{Binding FontSize}"
				TextAlignment="Center"			
				Foreground="{StaticResource PastelOrchid_0_080}"
				VerticalAlignment="Center"
				/>
			<ContentControl
				Grid.Row="0"
				Content="{Binding MiniChart}"
				/>
		</Grid>
	</Border>
</UserControl>
