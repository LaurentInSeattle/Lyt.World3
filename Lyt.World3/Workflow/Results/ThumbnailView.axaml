<UserControl 
	x:Class="Lyt.World3.Workflow.Results.ThumbnailView"
	xmlns:vm="clr-namespace:Lyt.World3.Workflow.Results"
	x:DataType="vm:ThumbnailViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="260"
	>
	<Border
		x:Name="outerBorder"
		Height="{Binding BorderHeight}" 
		Background="Transparent"
		BorderBrush="{StaticResource LightAqua_1_100}"
		BorderThickness="1"
		CornerRadius="4"
		>
		<ContentControl
			Margin="2"
			Content="{Binding MiniChart}"
			/>
	</Border>
</UserControl>
